<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btt_girar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="483dp"
        android:layout_marginTop="172dp"
        android:layout_marginEnd="112dp"
        android:layout_marginBottom="111dp"
        android:text="Tirar" />

    <ImageView
        android:id="@+id/rule"
        android:layout_width="276dp"
        android:layout_height="156dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="34dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="142dp"
        android:layout_marginEnd="373dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="33dp"
        android:scaleType="centerInside"
        android:src="@drawable/ruleta" />

    <ImageView
        android:id="@+id/triangle"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="164dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="493dp"
        android:src="@drawable/triangledown_106509" />

    <TextView
        android:id="@+id/resultadoTv"
        android:layout_width="262dp"
        android:layout_height="54dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="213dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="208dp"
        android:layout_marginBottom="235dp"
        android:textAlignment="center"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btt_verNum"
        android:layout_width="231dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="414dp"
        android:layout_marginTop="231dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="51dp"
        android:text="Ver ultimas tiradas" />

</RelativeLayout>